{
  "include": ["vite.config.ts", "vite.config.electron.ts", "package.json", "postcss.config.js"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  }
}
